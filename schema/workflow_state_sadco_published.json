{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "type": "object",

    "required": [
        "validated"
    ],

    "properties": {
        "validated": {
            "type": "boolean",
            "const": true
        },
        "errors": {
            "type": "object",
            "additionalProperties": false,
            "$comment": "Errors are permitted only for properties listed explicitly here.",
            "properties": {
                "distributionFormats": true,
                "lineageStatement": true,
                "onlineResources": true,
                "purpose": true,
                "spatialResolution": true
            }
        }
    }
}
