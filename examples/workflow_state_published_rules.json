{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "type": "object",

    "properties": {
        "data_agreement": {
            "type": "object",
            "properties": {
                "accepted": {"type": "boolean", "const": true},
                "href": {"type": "string", "format": "url"}
            },
            "required": ["accepted", "href"]
        },
        "terms_and_conditions": {
            "type": "object",
            "properties": {
                "accepted": {"type": "boolean", "const": true}
            },
            "required": ["accepted"]
        },
        "capture_info": {
            "type": "object",
            "properties": {
                "capture_method": {"type": "string", "enum": ["harvester", "curator", "manual"]}
            },
            "required": ["capture_method"]
        },
        "quality_control_1": {
            "type": "object",
            "properties": {
                "userid": {"type": "string", "objectid": "user", "role": "curator"},
                "date": {"type": "string", "format": "date"}
            },
            "required": ["userid", "date"]
        },
        "quality_control_2": {
            "type": "object",
            "properties": {
                "userid": {"type": "string", "objectid": "user", "role": "curator"},
                "date": {"type": "string", "format": "date"}
            },
            "required": ["userid", "date"]
        },
        "validated": {
            "type": "boolean",
            "const": true
        },
        "errors": {
            "type": "object",
            "maxProperties": 0
        },
        "metadata_json": {
            "$comment": "This element specifies additional validation to be performed on the metadata JSON at workflow transition time; validation rules defined in the applicable metadata schema(s) should not be repeated here.",
            "properties": {
                "immutableResource": {
                    "properties": {
                        "resourceURL": {
                            "urlTest": true
                        }
                    }
                },
                "linkedResources": {
                    "items": {
                        "properties": {
                            "resourceURL": {
                                "urlTest": true
                            }
                        }
                    }
                }
            }
        }
    },

    "required": [
        "data_agreement",
        "terms_and_conditions",
        "capture_info",
        "validated",
        "quality_control_1",
        "quality_control_2"
    ],

    "uniqueProperties": {
        "namePattern": "quality_control_[0-9]+",
        "childProperties": ["userid"]
    }
}
